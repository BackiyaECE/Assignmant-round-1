{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(index.html)?",
      "dest": "/public/index.html"
    },
    {
      "src": "/(scenarios|simulate|report/generate)(.*)",
      "dest": "/server.js"
    }
  ]
}